generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Link {
  code         String   @id @db.VarChar(8)
  target_url   String
  clicks       Int      @default(0)
  last_clicked DateTime?
  created_at   DateTime @default(now())
}
